function factlink()
{	
	var city=$('#rest-city :selected').text();
	if(city){
	$.ajax({ 				          
            type : 'GET',
            url : '/map-state/',
            data : {'city': city },                              
 				success: function(data) {
 				if(data){ 					                                    
             $('#rest-state').val(data.state);
             }                                   
           },
           error: function(response){
           			alert("Error!");
           },        

        });
        }
        else{
   			 $('#rest-state').val("");
        }
}

