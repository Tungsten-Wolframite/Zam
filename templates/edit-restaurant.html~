function check_value(city){
var city=city.trim();
console.log(city);
console.log('---------------------');
exists=false;
$('#rest-city option').each(function(){
console.log(this.value);
    if ((this.value).toString() == city) {   
        exists = true;
        return false;
    }    
});
return false;
}   
   
